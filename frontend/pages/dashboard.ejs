<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="../assets/styles/dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container">
        <h1>Dashboard</h1>
        <div class="stats">
            <div class="stat">
                <h3>Total Users</h3>
                <p id="total-users">0</p>
            </div>
            <div class="stat">
                <h3>Total Recipes</h3>
                <p id="total-recipes">0</p>
            </div>
            <div class="stat">
                <h3>Monthly New Users</h3>
                <p id="monthly-new-users">0</p>
            </div>
            <div class="stat">
                <h3>Monthly New Recipes</h3>
                <p id="monthly-new-recipes">0</p>
            </div>
        </div>
        <div class="charts">
            <div class="chart">
                <h3>Age Distribution</h3>
                <canvas id="age-chart"></canvas>
            </div>
            <div class="chart">
                <h3>Food Categories</h3>
                <canvas id="category-chart"></canvas>
            </div>
            <div class="chart">
                <h3>Gender Distribution</h3>
                <canvas id="gender-chart"></canvas>
            </div>
        </div>
    </div>

    <script>
        async function fetchDashboardData() {
            try {
                const response = await fetch('http://localhost:4000/api/dashboard');
                const data = await response.json();

                // Hiển thị số liệu
                document.getElementById('total-users').textContent = data.totalUsers;
                document.getElementById('total-recipes').textContent = data.totalRecipes;
                document.getElementById('monthly-new-users').textContent = data.monthlyNewUsers;
                document.getElementById('monthly-new-recipes').textContent = data.monthlyNewRecipes;

                // Biểu đồ tròn phân bố độ tuổi
                const ageChart = new Chart(document.getElementById('age-chart'), {
                    type: 'pie',
                    data: {
                        labels: ['Under 18', '18-30', '30-50', 'Over 50'],
                        datasets: [{
                            data: [
                                data.ageDistribution.under18,
                                data.ageDistribution['18to30'],
                                data.ageDistribution['30to50'],
                                data.ageDistribution.over50
                            ],
                            backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: { position: 'top' }
                        }
                    }
                });

                // Biểu đồ tròn danh mục món ăn
                const categoryChart = new Chart(document.getElementById('category-chart'), {
                    type: 'pie',
                    data: {
                        labels: Object.keys(data.categories),
                        datasets: [{
                            data: Object.values(data.categories),
                            backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: { position: 'top' }
                        }
                    }
                });

                // Biểu đồ cột phân bố giới tính
                const genderChart = new Chart(document.getElementById('gender-chart'), {
                    type: 'bar',
                    data: {
                        labels: Object.keys(data.genderDistribution),
                        datasets: [{
                            label: 'Number of Users',
                            data: Object.values(data.genderDistribution),
                            backgroundColor: ['#36A2EB', '#FF6384', '#FFCE56']
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: { beginAtZero: true }
                        }
                    }
                });
            } catch (error) {
                console.error('Error fetching dashboard data:', error);
            }
        }

        fetchDashboardData();
    </script>
</body>
</html>