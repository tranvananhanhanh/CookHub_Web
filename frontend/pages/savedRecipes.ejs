<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CookHub | Saved Recipes</title>
  <!-- Font -->
  <link href='https://fonts.googleapis.com/css?family=Plus Jakarta Sans' rel='stylesheet'>
  <script src="https://kit.fontawesome.com/da12da5f88.js" crossorigin="anonymous"></script>
  <script src="../js/popup.js"></script>
  <link rel="stylesheet" href="../assets/styles/popup.css">
  <!-- Thay thế Font Awesome kit bằng CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- CSS -->
  <link rel="stylesheet" href="../assets/styles/styles.css">
  <link rel="stylesheet" href="../assets/styles/responsive.css">
  <link rel="stylesheet" href="../assets/styles/savedRecipes.css">
  <!-- JavaScript -->
  <script src="../js/loadHTML.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
</head>

<body>
  <!-- Header -->
  <header class="header"></header>

  <main class="content-wrap">
    <!-- Khung lề trái cố định -->
    <div class="fixed-export-panel">
      <h1>Saved Recipes</h1>
      <div class="export-options">
        <label>
          <input type="radio" name="exportType" value="individual" checked />
          Export by item
        </label>
        <label>
          <input type="radio" name="exportType" value="aggregated" />
          Export all items together
        </label>
      </div>
      <button type="button" id="exportButton" class="see-more-button">Export shopping list</button>
    </div>

    <!-- Nội dung chính -->
    <section class="profile-content">
      <div class="container">
        <form id="savedRecipesForm">
          <div id="recipes" class="row">
            <!-- Danh sách công thức sẽ được load động -->
          </div>
          <!-- Nút "Xem thêm" sẽ được thêm động bằng JavaScript -->
        </form>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <div class="footer"></div>

  <!-- Thêm JavaScript -->
  <script src="../js/savedRecipes.js"></script>
</body>

</html>